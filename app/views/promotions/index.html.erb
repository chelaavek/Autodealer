<p id="notice"><%= notice %></p>

<h1>Promotions</h1>

<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @promotions.each do |promotion| %>
      <tr>
        <td class="list_description">
          <dl>
            <h3><%= link_to "#{promotion.title}", promotion_path(id: promotion)  %></h3>
            <dt><%= sanitize(promotion.promotion_terms) %></dt>
          </dl>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

